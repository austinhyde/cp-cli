{
  "name": "cp-cli",
  "version": "1.1.0",
  "description": "A 'cp' CLI util for Node.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf bin",
    "prepublish": "npm run build && npm run lint && npm run test",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/screendriver/cp-cli.git"
  },
  "keywords": [
    "cp",
    "cp -R -L",
    "copy"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/screendriver/cp-cli/issues"
  },
  "homepage": "https://github.com/screendriver/cp-cli#readme",
  "bin": "bin/cp-cli.js",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "<rootDir>/bin"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "dependencies": {
    "fs-extra": "^4.0.1",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^4.0.0",
    "@types/jest": "^20.0.6",
    "@types/yargs": "^8.0.2",
    "jest": "^20.0.4",
    "rimraf": "^2.5.2",
    "shelljs": "^0.7.0",
    "ts-jest": "^20.0.10",
    "tslint": "^5.6.0",
    "tslint-config-prettier": "^1.3.0",
    "tslint-language-service": "^0.9.6",
    "typescript": "^2.4.2"
  }
}
